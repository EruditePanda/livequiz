<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @quiz.title %>
</p>

<p>
  <strong>Owner email:</strong>
  <%= @quiz.owner_email %>
</p>


<p><b>Here is your secret access link : </b></p>

<div class="panel panel-default nested-fields answer-container">
  <div class="panel-body">
	<% url = "http://"+ ENV['HOST']+quiz_path(@quiz, access_password: @quiz.access_password) %>
	<%= link_to url, url %>
  </div>
</div>

<%= link_to raw('<i class="fa fa-pencil"></i> Edit the Quiz'), edit_quiz_path(@quiz, access_password: @quiz.access_password ), :class => 'btn btn-default' %>

<%= link_to raw('<i class="fa fa-clock-o"></i> Plan a Quiz sessions'), edit_quiz_path(@quiz, access_password: @quiz.access_password ), :class => 'btn btn-default' %>
